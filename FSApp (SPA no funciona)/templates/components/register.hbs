<!-- register.hbs -->
<div id="register" class="container">
  <h2>{{i18n "Registro de Usuario"}}</h2>
  <form>
    <div class="form-group">
      <label for="register-username">{{i18n "Nombre de usuario"}}</label>
      <input type="text" id="register-username" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="register-email">{{i18n "Correo Electrónico"}}</label>
      <input type="email" id="register-email" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="register-password">{{i18n "Contraseña"}}</label>
      <input type="password" id="register-password" class="form-control" required>
    </div>
    <button type="button" id="registerbutton" class="btn btn-primary">{{i18n "Registrarse"}}</button>
  </form>
</div>